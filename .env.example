# =============================================================================
# Funding Rate Arbitrage Bot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# All variables have sensible defaults for paper trading mode.

# --- Exchange Settings (Bybit) ---
# API credentials from Bybit account (leave empty for paper-only mode)
BYBIT_API_KEY=""
BYBIT_API_SECRET=""
# Use Bybit testnet (separate from demo trading)
BYBIT_TESTNET=false
# Use Bybit Demo Trading API (api-demo.bybit.com)
BYBIT_DEMO_TRADING=false

# --- Trading Settings ---
# Mode: "paper" (simulated) or "live" (real orders)
TRADING_MODE=paper
# Maximum position size in USD per pair
TRADING_MAX_POSITION_SIZE_USD=1000
# Minimum funding rate to consider (per 8h interval, e.g. 0.0003 = 0.03%)
TRADING_MIN_FUNDING_RATE=0.0003
# Maximum allowed drift between spot and perp quantities (as fraction, e.g. 0.02 = 2%)
TRADING_DELTA_DRIFT_TOLERANCE=0.02
# Timeout for order placement in seconds
TRADING_ORDER_TIMEOUT_SECONDS=5.0
# Seconds between autonomous scan cycles (Phase 2)
TRADING_SCAN_INTERVAL=60

# --- Fee Settings (Bybit Non-VIP tier defaults) ---
# Spot trading fees
FEES_SPOT_TAKER=0.001
FEES_SPOT_MAKER=0.001
# Perpetual trading fees
FEES_PERP_TAKER=0.00055
FEES_PERP_MAKER=0.0002

# --- Risk Management (Phase 2) ---
# Maximum position size in USD per pair
RISK_MAX_POSITION_SIZE_PER_PAIR=1000
# Maximum number of simultaneous open positions
RISK_MAX_SIMULTANEOUS_POSITIONS=5
# Close positions when funding rate drops below this (per period)
RISK_EXIT_FUNDING_RATE=0.0001
# Alert when maintenance margin ratio exceeds this (0.8 = 80%)
RISK_MARGIN_ALERT_THRESHOLD=0.8
# Emergency stop when margin ratio exceeds this (0.9 = 90%)
RISK_MARGIN_CRITICAL_THRESHOLD=0.9
# Minimum 24h volume in USD to consider a pair
RISK_MIN_VOLUME_24H=1000000
# Minimum funding periods to hold a position
RISK_MIN_HOLDING_PERIODS=3
# Virtual equity for paper mode margin simulation
RISK_PAPER_VIRTUAL_EQUITY=10000

# --- Logging ---
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Log format: "json" for production, "console" for development
LOG_FORMAT=console
